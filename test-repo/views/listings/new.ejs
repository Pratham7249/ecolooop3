<% layout("layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h2>Create New Listing</h2>
            <form class="row g-3 needs-validation" method="POST" action="/listings">


                <div class="col-md-4">
                    <label for="title" class="form-label">Title</label>
                    <input name='title' value='peniox villa' placeholder='Enter the title' type="text" required class="form-control">
                    <div class="invalid-feedback">Please provide a title.</div>
                </div>
                <div class="col-md-4">
                    <label for="description" class="form-label">Description</label>
                    <input name='description' value='A beautiful villa located in the heart of the city.' placeholder='Enter the description' type="text" required class="form-control">
                    <div class="invalid-feedback">Please provide a description.</div>
                </div>
                <div class="col-md-4">
                    <label for="image" class="form-label">Image URL</label>
                    <input name='image' value='https://images.unsplash.com/photo-15017858888041-af3ef285b470?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTh8fHRyYXZlbHxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=800&q=60' placeholder='Enter the image URL' type="text" required class="form-control">

                    <div class="invalid-feedback">Please provide an image URL.</div>
                </div>
                <div class="col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name='price' value='1500' placeholder='Enter the price' type="number" required class="form-control">
                    <div class="invalid-feedback">Please provide a price.</div>
                </div>
                <div class="col-md-4">
                    <label for="country" class="form-label">Country</label>
                    <input name='country' value='India' placeholder='Enter the country' type="text" required class="form-control">
                    <div class="invalid-feedback">Please provide a country.</div>
                </div>
                <div class="col-md-4">
                    <label for="location" class="form-label">Location</label>
                    <input name='location' value='Mumbai' placeholder='Enter the location' type="text" required class="form-control">
                    <div class="invalid-feedback">Please provide a location.</div>
                </div>
                <div class="col-12">
                    <button class="btn btn-dark" type="submit" style="background-color: #fe424d !important; border:none;">Add</button>
                </div>
            </form>
        </div>
    </div>
</body>
